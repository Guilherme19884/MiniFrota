@model IEnumerable<MiniFrota.Models.Sinistro>;
@{
    ViewData["Title"] = "Lista de Sinistro";
}

<table class="table table-success table-hover">
  <thead>
    @* Parte superior da lista, cabe√ßalho *@
    <tr>
      <th scope="col">
        @Html.DisplayNameFor(model => model.Id)
      </th>
      <th scope="col">
        @Html.DisplayNameFor(model => model.DataHora)
      </th>
      <th scope="col">
        @Html.DisplayNameFor(model => model.Descricao)
      </th>
      <th scope="col">
        @Html.DisplayNameFor(model => model.ApoliceSeguroSeguro)
      </th>
      @* <th scope="col">
         @Html.DisplayNameFor(model => model.Motoristas)
      </th> *@
    </tr>
  </thead>
  <tbody class="table table-success table-hover">

    @foreach (var item in Model)
    {
      <tr>
        <th scope="row">
          @Html.DisplayFor(model => item.Id)
        </th>
        <th scope="row">
          @Html.DisplayFor(model => item.DataHora)
        </th>
        <td>
          @Html.DisplayFor(model => item.Descricao)
        </td>
        <td>
          @Html.DisplayFor(model => item.ApoliceSeguroSeguro)
        </td>
        <td>
          <a type="submit" class="btn btn-warning"  asp-action="Editar" asp-route-id="@item.Id" asp-controller="Sinistro" >Alterar</a>
        </td>
        <td>
          <a type="submit" class="btn btn-danger"  asp-action="Excluir" asp-route-id="@item.Id" asp-controller="Sinistro" >Deletar</a>
        </td>
      </tr>
    }
  </tbody>
</table>