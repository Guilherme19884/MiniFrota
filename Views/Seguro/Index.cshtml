            <!-- Conteúdo Principal -->
            <div class="col-md-9">
                <h1>Seguro</h1>
<form method="post">
  <div class="mb-3 col-9">
    <label asp-for="NumeroApolice" class="form-label">Número da apolice</label>
    <input asp-for="NumeroApolice" type="text" class="form-control" id="NumeroApolice" aria-describedby="textHelp">
  </div>
  <div class="mb-3 col-9">
    <label asp-for="DataInicio" class="form-label"> Data de inicio da vigência </label>
    <input asp-for="DataInicio" type="date" class="form-control" id="DataInicio" aria-describedby="textHelp">
  </div>
  <div class="mb-3 col-9">
    <label asp-for="FimVigencia" class="form-label">Fim da vigência</label>
    <input asp-for="FimVigencia" type="date" class="form-control" id="FimVigencia" aria-describedby="textHelp">
  </div>
  <div class="mb-3 col-9">
    <label asp-for="Franquia" class="form-label">Informe se a franquia é normal ou reduzida</label>
    <input asp-for="Franquia" type="text" class="form-control" id="Franquia" aria-describedby="textHelp">
  </div>
   <div class="mb-3 col-9">
    <label asp-for="NomeSeguradora" class="form-label">Nome da Seguradora</label>
    <input asp-for="NomeSeguradora" type="text" class="form-control" id="NomeSeguradora" aria-describedby="textHelp">
  </div>
   <div class="mb-3 col-9">
    <label asp-for="NomeCorretoraSeguros" class="form-label">Nome da Corretora de seguros</label>
    <input asp-for="NomeCorretoraSeguros" type="text" class="form-control" id="NomeCorretoraSeguros" aria-describedby="textHelp">
  </div>
  <div class="mb-3 col-9">
    <label asp-for="ValorFranquia" class="form-label">Valor da franquia</label>
    <input asp-for="ValorFranquia" type="text" class="form-control" id="ValorFranquia" aria-describedby="textHelp">
  </div>
  <div class="mb-3 col-9">
    <label asp-for="ValorSeguro" class="form-label">Valor total do seguro</label>
    <input asp-for="ValorSeguro" type="text" class="form-control" id="ValorSeguro" aria-describedby="textHelp">
  </div>

  <button type="submit" class="btn btn-success" style="margin-right: 2.8rem;" asp-action="Index" value="Index" asp-controller="Seguro">Cadastrar</button>
  <button type="submit" class="btn btn-info" style="margin: 2.8rem;" asp-action="Listar" value="Listar" asp-controller="Seguro" >Listar</button>
  <button type="submit" class="btn btn-warning" style="margin: 2.8rem;">Alterar</button>
  <button type="submit" class="btn btn-danger" style="margin: 2.8rem;">Deletar</button>

  
</form>
                <!-- Aqui você pode adicionar o conteúdo específico de cada item do menu -->
            </div>
        </div>
    </div>
    
