@model IEnumerable<MiniFrota.Models.Motorista>;
@{
    ViewData["Title"] = "Lista de Abastecimento";
}

<table class="table table-success table-hover">
  <thead>
    @* Parte superior da lista, cabe√ßalho *@
    <tr>
      <th scope="col">
        @Html.DisplayNameFor(model => model.MotoristaId)
      </th>
      <th scope="col">
        @Html.DisplayNameFor(model => model.NumeroCnh)
      </th>
      <th scope="col">
        @Html.DisplayNameFor(model => model.Nome)
      </th>
      <th scope="col">
        @Html.DisplayNameFor(model => model.Salario)
      </th>
      @* <th scope="col">
         @Html.DisplayNameFor(model => model.Motoristas)
      </th> *@
    </tr>
  </thead>
  <tbody class="table table-success table-hover">

    @foreach (var item in Model)
    {
      <tr>
        <th scope="row">
          @Html.DisplayFor(model => item.MotoristaId)
        </th>
        <th scope="row">
          @Html.DisplayFor(model => item.NumeroCnh)
        </th>
        <td>
          @Html.DisplayFor(model => item.Salario)
        </td>
        <td>
          @Html.DisplayFor(model => item.Nome)
        </td>
        <td>
          <a type="submit" class="btn btn-warning"   asp-action="Editar" asp-route-id="@item.MotoristaId" asp-controller="Motorista" >Alterar</a>
        </td>
        <td>
          <a type="submit" class="btn btn-danger"   asp-action="Excluir"  asp-route-id="@item.MotoristaId" asp-controller="Motorista" >Deletar</a>
        </td>
      </tr>
    }
  </tbody>
</table>