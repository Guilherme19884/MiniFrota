@model IEnumerable<MiniFrota.Models.Veiculo>;
@{
    ViewData["Title"] = "Lista de Ve√≠culos";
}

<table class="table table-success table-hover">
  <thead>
    <tr>
      <th scope="col">
        @Html.DisplayNameFor(model => model.Modelo)
      </th>
      <th scope="col">
        @Html.DisplayNameFor(model => model.Marca)
      </th>
      <th scope="col">
         @Html.DisplayNameFor(model => model.Placa)
      </th>
      @* <th scope="col">
         @Html.DisplayNameFor(model => model.Motoristas)
      </th> *@
    </tr>
  </thead>
  <tbody class="table table-success table-hover">

    @foreach (var item in Model)
    {
      <tr>
        <th scope="row">
          @Html.DisplayFor(model => item.Modelo)
        </th>
        <td>
          @Html.DisplayFor(model => item.Marca)
        </td>
        <td>
           @Html.DisplayFor(model => item.Placa)
        </td>
        @* <td>
           @Html.DisplayFor(model => item.Motoristas)
        </td> *@
        <td>
          <a type="submit" class="btn btn-warning" asp-action="Editar" asp-route-id="@item.Placa" asp-controller="Veiculo" >Alterar</a>
        </td>
        <td>
          <a type="submit" class="btn btn-danger" asp-action="Editar" asp-route-id="@item.Placa" asp-controller="Veiculo" >Deletar</a>
        </td>
      </tr>
    }
  </tbody>
</table>