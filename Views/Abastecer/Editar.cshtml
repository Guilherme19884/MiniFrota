@model MiniFrota.Models.Abastecer;
@{
    ViewData["Title"] = "Editar Abastecimento";
}

    <div class="container-fluid">
        <div class="row">
            <!-- Menu Lateral -->
            <div class="col-md-2 bg-dark text-white" style="border-radius: 5px;">
                <h3 class="text-center mt-3" >Menu </h3>
                <ul class="nav flex-column mt-4">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Veiculo" asp-action="Index">Veículo</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white"asp-controller="Multa" asp-action="Index">Multa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white"asp-controller="Motorista" asp-action="Index">Motorista</a>
                    </li>
                     <li class="nav-item">
                        <a class="nav-link text-white"asp-controller="Manutencao" asp-action="Index">Manutenção</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white"asp-controller="Administração" asp-action="Index">Administrador</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Abastecer" asp-action="Index">Abastecer</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Emplacamento" asp-action="Index">Emplacamento</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Seguro" asp-action="Index">Seguro</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Sinistro" asp-action="Index">Sinistro</a>
                    </li>
                </ul>
        </div>
            
            <!-- Conteúdo Principal -->
            <div class="col-md-9">
                <h1>Abastecer</h1>
<form asp-action="Editar" method="post">
  <div class="mb-3 col-9">
    <label asp-for="DataAbastecimento" class="form-label">Data do Abastecimento</label>
    <input asp-for="DataAbastecimento" type="text" class="form-control" id="DataAbastecimento" aria-describedby="textHelp">
  </div>
  <div class="mb-3 col-9">
    <label asp-for="KmAtual" class="form-label">Km atual</label>
    <input asp-for="KmAtual" type="text" class="form-control" id="KmAtual" aria-describedby="textHelp">
  </div>
  <div class="mb-3 col-9">
    <label asp-for="TipoCombustivel" class="form-label">Tipo do combustível</label>
    <input asp-for="TipoCombustivel" type="text" class="form-control" id="TipoCombustivel" aria-describedby="textHelp">
  </div>
  <div class="mb-3 col-9">
    <label asp-for="PrecoCombustivel"  class="form-label">Preço do combustível</label>
    <input asp-for="PrecoCombustivel" type="text" class="form-control" id="PrecoCombustivel" aria-describedby="textHelp">
  </div>
  <div class="mb-3 col-9">
    <label asp-for="ValorAbastecimento"  class="form-label">Valor do abastecimento</label>
    <input asp-for="ValorAbastecimento" type="text" class="form-control" id="ValorAbastecimento" aria-describedby="textHelp">
  </div>
  <div class="mb-3 col-9">
    <label asp-for="QuantidadeLitros" class="form-label">Quantidade de litros</label>
    <input asp-for="QuantidadeLitros" type="text" class="form-control" id="QuantidadeLitros" aria-describedby="textHelp">
  </div>

  <button type="submit" class="btn btn-success" style="margin-right: 2.8rem;" asp-action="Index" value="Index" asp-controller="Abastecer" >Cadastrar</button>
  <button type="submit" class="btn btn-info" style="margin: 2.8rem;" asp-action="Listar" value="Listar" asp-controller="Abastecer">Listar</button>
  <button type="submit" class="btn btn-warning" style="margin: 2.8rem;">Alterar</button>
  <button type="submit" class="btn btn-danger" style="margin: 2.8rem;">Deletar</button>

  
</form>
                <!-- Aqui você pode adicionar o conteúdo específico de cada item do menu -->
            </div>
        </div>
    </div>
    
